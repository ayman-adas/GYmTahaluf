@model SubScripedPlan

@{
    ViewData["Title"] = "My Subscription Plan";
    Layout = null;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="mb-4">@Model.Plan.Title</h1>
            <p class="text-muted">@Model.Plan.Descriptions</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4>Plan Details</h4>
                </div>
                <div class="card-body">
                    <p><strong>Price:</strong> @Model.Plan.Price.ToString("C")</p>
                    <p><strong>Duration:</strong> @Model.Plan.DaysInWeek months</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h4>Schedule</h4>
                </div>
                <div class="card-body">
                    @if (Model.Schedule != null)
                    {
                        <p><strong>Date:</strong> @Model.Schedule.StartDay</p>
                        <p><strong>Time:</strong> @Model.Schedule.StartTime</p>
                    }
                    else
                    {
                        <p>No schedule available.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4>Exercises</h4>
                </div>
                <div class="card-body">
                    @if (Model.Exercises != null && Model.Exercises.Any())
                    {
                        <ul class="list-group">
                            @foreach (var exercise in Model.Exercises)
                            {
                                <li class="list-group-item">
                                    <strong>Name:</strong> @exercise.Title
                                    <br />
                                    <strong>Description:</strong> @exercise.Description
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No exercises available for this plan.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
