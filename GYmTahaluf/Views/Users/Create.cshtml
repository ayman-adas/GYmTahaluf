@model GYmTahaluf.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" name="UserName" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" name="password" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" name="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
  <select id="RoleId" name="RoleId" class="form-control" asp-for="RoleId">
            <option value="">-- Select Role --</option>
                    @if (ViewBag.Roles != null && ViewBag.Roles is List<GYmTahaluf.Models.Role> roles)
                    {
                        foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role.Id">@role.RoleName</option>
                        }
                    }
                    else
                    {
                        <option>No roles available</option>
                    }
        </select>            
            </div>

            <div class="form-group">
                <label asp-for="Isblock" class="control-label"></label>
                    <input asp-for="Isblock" type="checkbox" name="Isblock" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="UserImage" class="control-label"></label>
                <input asp-for="imageFile" type="file" name="imageFile" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
