    <section class="section" id="contact-us">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div id="map">
                        <iframe src="https://maps.google.com/maps?q=32.0342208,35.8781282&t=&z=14&ie=UTF8&iwloc=&output=embed"
                                width="100%"
                                height="600px"
                                frameborder="0"
                                style="border:0"
                                allowfullscreen>
                        </iframe>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="contact-form">
                        <form id="contact" asp-controller="Testimonial" asp-action="Create" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <fieldset>
                                        <textarea name="Text" rows="6" id="message" placeholder="Message" asp-for="Testimonial.Text" required=""></textarea>
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <label for="rating-slider">Rate us:</label>
                                        <input type="range" id="rating-slider" name="Rate" asp-for="Testimonial.Rate" min="1" max="5" value="3" oninput="updateSliderValue(this.value)">
                                        <span id="slider-value">3</span>
                                    </fieldset>
                                </div>
                                <!-- Image Upload -->
                                <div class="col-lg-12">
                                    <fieldset>
                                        <input type="file" asp-for="Testimonial.imageFile" name="imageFile" />
                                    </fieldset>
                                </div>
                                <input type="hidden" name="UserId" value="@Model.User.Id" asp-for="@Model.User.Id" />

                                <div class="col-lg-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="main-button">Send Message</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
