@model GYmTahaluf.Models.Testimonial

@{
    ViewData["Title"] = "Delete Testimonial";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Delete Testimonial</h1>
<h3>Are you sure you want to delete this testimonial?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User.UserName</dd>

    <dt class="col-sm-2">Rate</dt>
    <dd class="col-sm-10">@Model.Rate</dd>

    <dt class="col-sm-2">Text</dt>
    <dd class="col-sm-10">@Model.Text</dd>

    <dt class="col-sm-2">Admin Review</dt>
    <dd class="col-sm-10">@((Model.Isadminreview.HasValue && Model.Isadminreview.Value) ? "Approved" : "Not Approved")</dd>

    <dt class="col-sm-2">Priority</dt>
    <dd class="col-sm-10">@Model.Priority</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
