@model GYmTahaluf.Models.Testimonial

@{
    ViewData["Title"] = "Edit Testimonial";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit Testimonial</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="Isapproved" class="control-label">Admin Review</label>
                <select asp-for="Isapproved" class="form-control">
                    <option value="true">Approved</option>
                    <option value="false">Not Approved</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label">Priority</label>
                <select asp-for="Priority" class="form-control">
                    <option value="High">High</option>
                    <option value="Medium">Medium</option>
                    <option value="Low">Low</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
