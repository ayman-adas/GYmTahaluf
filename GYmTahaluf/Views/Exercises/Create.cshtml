@model GYmTahaluf.Models.Exercise

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/TrainnerLayout.cshtml";
    ViewBag.UserId = ViewBag.UserId;

}

<h1>Create</h1>

<h4>Exercise</h4>
<hr />
<div class="row"> 
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlanId" class="control-label"></label>
                <select asp-for="PlanId" class="form-control" asp-items="@(ViewBag.PlanId as List<SelectListItem>)"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repetition" class="control-label"></label>
                <input asp-for="Repetition" class="form-control" />
                <span asp-validation-for="Repetition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestPeriod" class="control-label"></label>
                <input asp-for="RestPeriod" class="form-control" />
                <span asp-validation-for="RestPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <input asp-for="Difficulty" class="form-control" />
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

